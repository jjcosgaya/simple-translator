{
  "name": "Simple Translator",
  "description": "Fast and simple text translation on selection, via chrome translator AI API.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [ "scripts/translator.js" ],
      "matches": ["*://*/*"]
    }
  ]
}
